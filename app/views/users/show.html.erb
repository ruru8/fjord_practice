<h1><%= @user.name %>のマイページ </h1>
<%= link_to "following: #{@user.following.count}", following_user_path(@user) %>
<%= link_to "followers: #{@user.followers.count}", followers_user_path(@user) %>
<div>
  <%= @user.image.attached? ? image_tag(@user.image, :size => "100x100") : "画像はありません" %>
</div>
<p>名前 : <%= @user.name %></p>
<p>プロフィール : <%= @user.profile %></p>
<% if current_user == @user %>
  <p>郵便番号 : <%= @user.zip %></p>
  <p>住所 : <%= @user.address %></p>
  <p>メールアドレス : <%= @user.email %></p>
<% end %>

<% if current_user == @user %>
  <%= link_to "Edit", edit_user_registration_path(current_user.id) %>
<% else %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
             html: { method: :delete }) do |f| %>
      <%= f.submit "Unfollow", class: "btn" %>
    <% end %>
  <% else %>
    <%= form_for(current_user.active_relationships.build) do |f| %>
      <div><%= hidden_field_tag :followed_id, @user.id %></div>
      <%= f.submit "Follow", class: "btn" %>
    <% end %>
  <% end %>
  </div>
<% end %>

<p><%= link_to "<< Back", users_path %></p>
